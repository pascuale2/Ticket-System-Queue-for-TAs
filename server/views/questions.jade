    .wrapper
      // Sidebar
      nav#sidebar
        #dismiss
          i.fas.fa-arrow-left
        // Profile picture
        .sidebar-header
          .row.justify-content-center
            .profile
              .row.justify-content-center
                img(src='/images/donut.png')
          h2.text-center  Username
          h3.text-center  Biography
        hr
        ul.list-unstyled.components
          li
            a(href='home')
              i.fas.fa-home
              | Home
          li.active
            a(href='#coursesSubmenu' data-toggle='collapse' aria-expanded='false')
              i.fas.fa-book
              | Courses
              ul#coursesSubmenu.collapse.list-unstyled
                li
                  a(href='courses') Current Courses
                li
                  a(href='#') Search Courses
          li.active
            a(href='#questionsSubmenu' data-toggle='collapse' aria-expanded='false')
              i.fas.fa-question-circle
              | Questions
              ul#questionsSubmenu.collapse.list-unstyled
                li
                  a(href='questions') Ask a Question
                li
                  a(href='questions_search') Search Questions
          li
            a(href='professors')
              i.fas.fa-chalkboard-teacher
              | Professors
          li.active
            a(href='#discussionsSubmenu' data-toggle='collapse' aria-expanded='false')
              i.fas.fa-comments
              | Discussions
              ul#discussionsSubmenu.collapse.list-unstyled
                li
                  a(href='discussions') Discussion Board
                li
                  a(href='chat') Group Chats
        hr
        ul.list-unstyled.components
          li
            a(href='settings')
              i.fas.fa-cog
              | Settings
          li
            a(href='#' onclick='logOut();')
              i.fas.fa-sign-out-alt
              | Logout
      // Page Content
      #page
        nav.navbar.navbar-expand-ml
          #navbar-header.container-fluid
            a#sidebarCollapse(href='#')
              i.fas.fa-bars
            .logo
              a(href='Home')
                img(src='/images/maple-donut-logo.png')
            a(href='#')
        #content
          .card.p-3.container-fluid
            h5 Please input your question.

            .input-group
              input#searchInput.form-control.py-2.border-right-0.border(type='search' placeholder='"How do you transcibe w sounds in IPA"')
            .input-group
              .input-group-prepend
                span.input-group-text More info
              textarea.form-control(aria-label='With textarea')
            p Added information is not required, but may help your responder prepare.
            .row
              .col-md-7
                h5 Is this a question for a specific course, or an advisor?
              .col-md-3
                .input-group.mb-3
                  select#inputCoA.custom-select
                    option(selected='') Choose...
                    option(type='text' value='course') Course
                    option(type='text' value='advisor') Advisor

            .row
              .col-md-7
                h5 If for a course, please specify.
              .col-md-3
                .input-group.mb-3
                  select#inputCoA.custom-select
                    option(selected='') Choose...
                    option(value='course') CMPT 101
                    option(value='advisor') CMPT 229
                    option(value='advisor') CMPT 291


              .row
                .col-md-7
                  h5 Do you require voice chat?
                .col-md-3
                  label.switch
                    input(type='checkbox')
                    span.slider
          form(action='/questions' method='post')
            .row
              input.searchInput(type='text' name='question_ask' placeholder='e.g. What is this website called?')
            .row

              h5 Is this a question for a specific course, or an advisor?
              .input-group.mb-3
                  input.searchInput(type='text' name='question_type' placeholder='e.g. Instructor Name or Course Name')
            .row
              button.searchIcon(type='submit')
                i.fas.fa-search

          .card.p-3.container-fluid
            h2.text-center Your outgoing questions and their queues.
            questions_stated = []
            index_counter = 0
            .row
              .col-md-6
                h5 Question
                // loops through locals.data and assigns a list-group-item for each question string
                ul.list-group
                  for questions in locals.data
                    //questions_stated[index_counter] = questions.question_string
                    //index_counter = index_counter + 1
                    if questions.question_string != Null
                      a.list-group-item.list-group-item-action #{questions.question_string}
              .col-md-3
                h5 Status
                // loops through locals.data again and states whether question is answered or not
                ul.list-group
                  for questions in locals.data
                      if questions.question_status == 0
                        a.list-group-item.list-group-item-action(href='#').place-in-queue Not Answered
                      else
                        a.list-group-item.place-in-queueAnswered Answered
              .col-md-3
                h5 Place in Queue
                // loops through locals.data again and states whether question is answered or not
                ul.list-group
                  for questions in locals.data
                      if questions.question_status == 0
                        a.list-group-item.list-group-item-action(href='#').place-in-queue Not Answered
                      else
                        a.list-group-item.place-in-queueAnswered Answered
