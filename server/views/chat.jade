    script.
      //window.onload = init(!{channels});
      window.addEventListener('DOMContentLoaded', function() {
        init(!{channels});
      });

      function init(getchannels) {
        getchannels.channels.forEach(addMessageGroup);
        document.getElementById("messagesend").onclick=function(){
          sendMessage(!{zoomtokn}.access_token,getchannels.channels[0].id,document.getElementById("messagecontent").value);
          document.getElementById("messagecontent").value="";
