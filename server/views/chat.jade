  body
    // google auth stuff and chat message generation
    script.
      //window.onload = init(!{channels});
      window.addEventListener('DOMContentLoaded', function() {
        init();
      });

      function init() {
        addMessageGroup("CMPT 101","Introduction to Computing I","1");
        addMessageGroup("CMPT 103","Introduction to Computing II","2");
        addMessageGroup("CMPT 104","Fluency with Information Technology","3");
        addMessageGroup("CMPT 200","Data Structures and Algorithms","4");
        addMessageGroup("CMPT 201","Practical Programming Methodology","5");
        addMessageGroup("CMPT 204","Algorithms I","6");
        addMessageGroup("CMPT 220","Unix, Scripting, and Other Tools","7");

      }
    .wrapper
      // Sidebar
      nav#sidebar
        #dismiss
          i.fas.fa-arrow-left
        // Profile picture
        .sidebar-header
          .row.justify-content-center
            .profile
              .row.justify-content-center
                img#profilepic(src='/images/donut.png')
          h2#profilename.text-center Seth Thompson
          h3.text-center  
        hr
        ul.list-unstyled.components
          li
            a(href='home')
              i.fas.fa-home
              | Home
          li.active
            a(href='#coursesSubmenu' data-toggle='collapse' aria-expanded='false')
              i.fas.fa-book
              | Courses
              ul#coursesSubmenu.collapse.list-unstyled
                li
                  a(href='courses') Current Courses
                li
                  a(href='#') Search Courses
          li.active
            a(href='#questionsSubmenu' data-toggle='collapse' aria-expanded='false')
              i.fas.fa-question-circle
              | Questions
              ul#questionsSubmenu.collapse.list-unstyled
                li
                  a(href='questions') Ask a Question
                li
                  a(href='questions_search') Search Questions
                li
                  a(href='questions_asked') Asked Questions
          li
            a(href='professors')
              i.fas.fa-chalkboard-teacher
              | Professors
          li.active
            a(href='#discussionsSubmenu' data-toggle='collapse' aria-expanded='false')
              i.fas.fa-comments
              | Discussions
              ul#discussionsSubmenu.collapse.list-unstyled
                li
                  a(href='discussions') Discussion Board
                li
                  a(href='chat') Group Chats
        hr
        ul.list-unstyled.components
          li
            a(href='settings')
              i.fas.fa-cog
              | Settings
          li
            a(href='#' onclick='logOut();')
              i.fas.fa-sign-out-alt
              | Logout
      // Page Content
      #page
        nav.navbar.navbar-expand-md
          #navbar-header.container-fluid
            a#sidebarCollapse(href='#')
              i.fas.fa-bars
            .logo
              a(href='/home')
                img(src='/images/maple-donut-logo.png')
            a(href='#')
        #content  
          .message-section
            .message-section-title Channels
            ul#message-list
    .overlay
