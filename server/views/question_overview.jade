doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title Maple Donut - Professors

    // 1,2 - CSS BOOTSTRAP LINK
    // 3 - CUSTOM CSS LINKS
    // 4 - FAVICON LINK
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css' integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl' crossorigin='anonymous')
    link(rel='stylesheet' href='/stylesheets/questions_overview.css')
    link(rel='icon' type='image/png' href='/images/donut.png')

    // 1 - FONT AWESOME SCRIPT
    // 2 - jQuery CDN - Slim version (=without AJAX)
    // 3 - Popper.JS
    // 4 - Bootstrap JS
    // 5 - jQuery Custom Scroller CDN
    // 6 - Sidebar Animation JS
    // 7,8 - Google Auth
    script(src='https://kit.fontawesome.com/c13290656a.js' crossorigin='anonymous')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js', integrity='sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js', integrity='sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js')
    script(type='text/javascript' src='/javascripts/sidebar.js')
    script(type='text/javascript' src='/javascripts/google.js' async='' defer='')
    script(src='https://apis.google.com/js/platform.js?onload=onLoad' async='' defer='')

  body
    .wrapper
      // Sidebar
      nav#sidebar
        #dismiss
          i.fas.fa-arrow-left
        // Profile picture
        .sidebar-header
          .row.justify-content-center
            .profile
              .row.justify-content-center
                img#profilepic(src='/images/donut.png')
          h2#profilename.text-center Seth Thompson
          h3.text-center  
        hr
        ul.list-unstyled.components
          li
            a(href='/home')
              i.fas.fa-home
              | Home
          li
            a(href='/courses')
              i.fas.fa-book
              | Courses
          li.active
            a(href='#questionsSubmenu' data-toggle='collapse' aria-expanded='false')
              i.fas.fa-question-circle
              | Questions
              ul#questionsSubmenu.collapse.list-unstyled
                li
                  a(href='/questions') Ask a Question
                li
                  a(href='/questions_search') Search Questions
                li
                  a(href='/questions_asked') Asked Questions
          li
            a(href='/professors')
              i.fas.fa-chalkboard-teacher
              | Professors
          li
            a(href='/token/chat')
              i.fas.fa-comments
              | Group Chats
        hr
        ul.list-unstyled.components
          li
            a(href='/settings')
              i.fas.fa-cog
              | Settings
          li
            a(href='#' onclick='logOut();')
              i.fas.fa-sign-out-alt
              | Logout
      // Page Content
      #page
        nav.navbar.navbar-expand-ml
          #navbar-header.container-fluid
            a#sidebarCollapse(href='#')
              i.fas.fa-bars
            .logo
              a(href='/home')
                img(src='/images/maple-donut-logo.png')
            a(href='#')
      #content
        h1.text-center Answered Questions for Label/Tag: #{locals.labeltitle}
        h4.text-center #{locals.teacher}
        hr
        if locals.data != null
          .list-group
            for answer in locals.data
              .d-flex.justify-content-center
                .list-group-item.list-group-item-action.flex-column.align-items-start(href='#' id='link_card')
                  .d-flex.w-100.justify-content-between
                    h3.mb-1 #{answer.question_title}
                    a.button.btn.btn-outline-warning(href='/schedule/'+locals.teacher+'/'+locals.labeltitle+'/view_answers/'+answer.question_id) #{answer.upvote}
                      i.fas.fa-star.fa-fw
                  .description_container(id='description_container')
                    p(id='question_card_desc').mb-1 #{answer.question_desc}
                  hr(id='no_margin_line_break')
                  .description_container(id='description_container')
                    .d-flex.w-100.justify-content-between
                      p(id='question_card_desc').mb-1 A: #{answer.answer_string}
                  p(id='faded_paragraph')
                    small Date Answered: #{answer.answer_date} | Answered By: #{locals.teacher}
    .overlay
